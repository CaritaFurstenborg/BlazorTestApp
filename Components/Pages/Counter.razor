@page "/counter/{initialCount:int?}"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="Increment">Click me</button>
<ImageFrame />

<div class="mt-3">
    <input @oninput="OnInput" />
    <button>Clear</button>
    <p>@inputMessage</p>
</div>

<div style="background-color: lightgray" @onmouseover="OnMouseOver" @onmouseout="OnMouseOut">
    @divText
</div>

@if (currentCount > 2 && currentCount < 5) {
    <p>Testing logic</p>
}

<ul>
    @for(int i = 0; i < currentCount; i++)
    {
        var count = i + 1;
        <li>Clicked @count times!</li>
    }
</ul>
